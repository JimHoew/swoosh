<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/beginnerballerbg"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            android:contentDescription="@string/background_image"/>
    <ImageView
            android:layout_width="246dp"
            android:layout_height="60dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView10"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:contentDescription="@string/swoosh_logo"/>
    <TextView
            android:text="@string/i_am_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:textSize="36sp"
            android:textColor="@android:color/white" android:fontFamily="@font/montserrat"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="180dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView10" android:textStyle="bold"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="700dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/imageView6" android:layout_marginStart="8dp"
            android:layout_marginTop="90dp" android:id="@+id/linearLayout4">
        <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="160dp" android:id="@+id/beginnerSkillBtn" android:textOff="@string/beginner"
                android:textOn="@string/beginner" android:background="@drawable/swoosh_toggle"
                android:textColor="@android:color/white" android:textSize="36sp" android:onClick="onBeginnerClick"
                android:fontFamily="@font/montserrat"/>
        <ToggleButton
                android:text="@string/togglebutton"
                android:layout_width="match_parent"
                android:layout_height="160dp" android:layout_marginTop="55dp"
                android:textOff="@string/baller" android:textOn="@string/baller"
                android:textColor="@android:color/white" android:textSize="36sp"
                android:background="@drawable/swoosh_toggle" android:onClick="onBallerClick"
                android:fontFamily="@font/montserrat" android:id="@+id/ballerSkillBtn"/>
    </LinearLayout>
    <Button
            android:text="@string/finish"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/skillFinishBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" app:layout_constraintVertical_bias="1.0"
            android:textColor="@android:color/white" android:fontFamily="@font/montserrat" android:textSize="36sp"
            android:background="@drawable/swoosh_button" android:onClick="onSkillFinishedClicked"/>
</androidx.constraintlayout.widget.ConstraintLayout>