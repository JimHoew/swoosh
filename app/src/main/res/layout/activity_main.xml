<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcomescreenbg"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="29dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView2"
            android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="GO ALL IN"
            android:layout_width="232dp"
            android:layout_height="55dp"
            android:id="@+id/textView" android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat" android:textSize="46sp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:text="ON GOING ALL OUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="92dp" android:id="@+id/textView2" android:fontFamily="@font/montserrat"
            android:textSize="22sp" android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:textStyle="bold"/>
    <TextView
            android:text="Find a team in your city, and dominate the league"
            android:layout_width="238dp"
            android:layout_height="45dp"
            android:id="@+id/textView3" android:singleLine="false"
            android:textColor="#FFFFFF" android:textAlignment="center" android:textSize="16sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:fontFamily="@font/montserrat"/>
    <Button
            android:text="GET STARTED"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" android:fontFamily="@font/montserrat"
            android:textColor="#FFFFFF" android:background="@drawable/swoosh_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>